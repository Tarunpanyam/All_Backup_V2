<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.dbs.tarun.DatabaseConnectivity.model.Person"
        table="PERSON_TABLE">
        <id name="personId" type="java.lang.Integer" column="PID">
            <generator class="identity" /> <!-- Generator can be ignored -->
        </id>
        <property name="personName" column="PNAME" />
        <property name="personCity" column="PCITY" />
        <!-- <property name="isbn" column="ISBN" unique="true" length="10" /> -->
    </class>
</hibernate-mapping>
